<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="220dp"
        android:layout_height="106dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-40dp"
        android:src="@drawable/logo" />


    <View
        android:id="@+id/rectangle"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="550dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/rounded_rectangle" />
    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_above="@id/rectangle"
        android:layout_marginBottom="-100dp"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Restaurants Reviews Reinvented"
        android:textColor="@color/accent_red"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/edittext_rounded"
        android:textSize="20sp"
        android:padding="13dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/nameInput"
        android:textColor="@color/black"
        android:textColorHint="#404040"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@id/signupText"
        android:layout_marginTop="130dp"

        android:imeOptions="actionNext"
        android:inputType="text" />
    <EditText
        android:layout_marginHorizontal="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/phoneInput"
        android:textColor="@color/black"
        android:textColorHint="#404040"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:layout_below="@id/nameInput"
        android:layout_marginTop="30dp"
        android:inputType="phone"
        android:background="@drawable/edittext_rounded"
        android:textSize="20sp"
        android:padding="13dp"
        />

    <EditText
        android:textColor="@color/black"
        android:textColorHint="#404040"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:padding="13dp"
        android:id="@+id/passwordInput"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_rounded"
        android:inputType="textPassword"
        android:layout_below="@id/phoneInput"/>
    <EditText
        android:textColor="@color/black"
        android:textColorHint="#404040"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/edittext_rounded"
        android:textSize="20sp"
        android:padding="13dp"
        android:id="@+id/passwordconfirmInput"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:layout_below="@id/passwordInput"/>

    <Button
        android:layout_marginHorizontal="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/loginButton"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:layout_below="@id/passwordconfirmInput"
        android:layout_marginTop="25dp"/>

</RelativeLayout>
